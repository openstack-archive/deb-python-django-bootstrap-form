#PYTHON3S:=$(shell py3versions -vr)

UPSTREAM_GIT = git://github.com/tzangms/django-bootstrap-form.git
-include /usr/share/openstack-pkg-tools/pkgos.make

%:
	dh $@ --buildsystem=python_distutils --with python2,sphinxdoc

