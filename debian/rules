override_dh_sphinxdoc:
	PYTHONPATH=$(CURDIR) sphinx-build docs debian/python-bootstrapform-doc/usr/share/doc/python-bootstrapform-doc
	dh_sphinxdoc -O--buildsystem=python_distutils
